<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="7dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        app:cardElevation="8dp"
        android:background="@color/lightgray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/verylightgray">

            <ImageView
                android:id="@+id/post_newsitem_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/default_news"
                android:scaleType="centerCrop"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/post_newsitem_title"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Titulo"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                <ImageView
                    android:id="@+id/post_newsitem_time_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_access_time_black_24dp"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:id="@+id/post_newsitem_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/post_newsitem_time_icon"
                    android:layout_toStartOf="@+id/post_newsitem_time_icon"
                    android:text="30/12/17" />

                <TextView
                    android:id="@+id/post_newsitem_body"
                    android:layout_width="218dp"
                    android:layout_height="51dp"
                    android:layout_below="@id/post_newsitem_title"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="lkdsljfglfdjglfjglfjglkdfjglfjgljflgjlfkgjlfkjglfkjglkfjgjfkgkjfm..."
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />



            </RelativeLayout>

            <ImageView
                android:id="@+id/deleteNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/ic_delete_black_24dp"
                tools:ignore="RtlHardcoded" />
        </LinearLayout>


    </android.support.v7.widget.CardView>
    



</LinearLayout>