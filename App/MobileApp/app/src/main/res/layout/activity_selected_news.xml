                android:layout_height="wrap_content"
                android:text="News Title"
                android:id="@+id/selected_news_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/black"
                android:textSize="45sp"/>
        </LinearLayout>

